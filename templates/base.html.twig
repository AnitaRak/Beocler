<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>
			{% block title %}Béocler
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		<!-- Feuilles de style -->

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/_footer.css') }}">
			<link rel="stylesheet" href="{{ asset('css/_nav.css') }}">
			<link rel="stylesheet" href="{{ asset('css/_login.css') }}">
			<link rel="stylesheet" href="{{ asset('css/main.css') }}">
			<link rel="stylesheet" href="{{ asset('css/aos.css') }}">
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
		{% endblock %}
		 <style>
        

        .sidebar {
            background-color: #FFFFFF;
            color: #0fb706;
            min-width: 250px;
            max-width: 300px;
            height: 100vh;
            position: fixed;
            top: 56px; /* Adjusted for navbar height */
            overflow-y: auto;
			border: 2px solid green;
			box-shadow: 6px 6px 25px rgba(0.5, 0.5, 0.5, 0.5);
        }

        .content {
            margin-top: 56px; /* Adjusted for navbar height */
            margin-left: 350px; /* Adjusted for sidebar width */
            padding: 20px;
            overflow-y: auto;
            height: calc(100vh - 56px);
        }

        @media (max-width: 768px) {
            .sidebar {
                position: relative;
                top: 0;
                height: auto;
                min-width: 100%;
                max-width: 100%;
            }

            .content {
                margin-left: 0;
            }
        }
		 .chart-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .chart {
            width: 45%;
            height: 300px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
            background-color: white;
        }

        canvas {
            display: block;
            max-width: 100%;
            height: auto;
        }
    </style>

      

		<!-- Fichiers JS -->

		{# JS BOOTSTRAP via le lien   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
																																																																																																														#}
		<script src="{{ asset('js/bootstrap.bundle.js') }}"></script>
		<script src="{{ asset('js/aos.js') }}"></script>
		<script src="{{ asset('js/jquery-3.7.1.min.js') }}"></script>


		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}

		<!-- responsive -->

		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	</head>

	<body
		class="bg-light">
		<!-- nav bar -->
		{% block nav %}
			{% include "_partials/_nav.html.twig" %}


			<!--Conditions qui verifie que l'user est connecté est que sont compte n'a pas encore étais activé-->
			{% if app.user and app.user.isVerified == false %}
				<!--On va afficher une alerte-->
				<div class="alert alert-warning alert-dismissible" role="alert">
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

					<div class="alert-message">
						<strong>Votre compte n'est pas activé</strong>,<a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
					</div>
				</div>
			{% endif %}

			{% include "_partials/_flash.html.twig" %}
		{% endblock %}


		<!-- body -->
		{% block body %}{% endblock %}

		<!-- footer -->
		{% block footer %}
			{% include "_partials/_footer.html.twig" %}
		{% endblock %}

	</body>

</html>
