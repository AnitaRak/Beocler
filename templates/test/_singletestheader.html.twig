{% block body %}
    <main class="main">
        <section id="hero" class="hero section dark-background">
            <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-item active">
                    <img src="{{ asset('images/3.jpg') }}" alt="">
                    <div class="carousel-container">
                        <h2 class="text-center">{{ test.name }}<br></h2>
                        <p>Cette épreuve est composée de
                            <strong>{{ itemsCount }}</strong>
                            items actifs</p>
                        <br>
                        {% if app.request.attributes.get('_route') == 'admin_test_detail' %}
                            <a class="btn-detail-test mt-3" href="{{ path('admin_test_edit', {id: test.id }) }}">Modifier ce test</a>


                            <a class="btn btn-secondary mt-3 mb-3" href="{{ path('admin_test_index')}}">Revenir à la liste des épreuves</a>
                        {% else %}
                            <a class="btn-detail-test" href="{{ path('app_evaluation_choix_patient', {'idTest' : idTest}) }}">Lancer cette épreuve</a>
                            <a class="btn btn-secondary mt-3 mb-3" href="{{ path('test_index')}}">Revenir à la liste des épreuves</a>
                        {% endif %}

                    </div>
                </div>

                <!-- End Carousel Item -->
            </div>

        </section>
    </main>


{% endblock %}
